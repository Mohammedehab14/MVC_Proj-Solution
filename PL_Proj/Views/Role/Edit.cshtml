@model RoleViewModel
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w-50 mx-auto box p-4 rounded my-3">
    <h2 class="text-center">Edit @Model.RoleName User Details</h2>

    <form asp-action="Edit">

        <div class="w-75 mx-auto mb-3">
            <label class="mb-2" asp-for="Id"></label>
            <input readonly asp-for="Id" placeholder="@Html.DisplayNameFor(R =>R.Id)" class="d-block w-100 rounded px-2">
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        
        <div class="w-75 mx-auto mb-3">
            <label class="mb-2" asp-for="RoleName"></label>
            <input asp-for="RoleName" placeholder="@Html.DisplayNameFor(R =>R.RoleName)" class="d-block w-100 rounded px-2">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div class="w-100 text-center mt-3">
            <input type="submit" class="btn btn-dark w-50" value="Save" />
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </div>
    </form>
</div>
@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}

