@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="Create" class="btn btn-dark">Add New Role  <i class="fa-solid fa-arrow-right"></i></a>

@if (Model.Count() > 0)
{

    <div class="w-100 mx-auto mt-5 p-1">
        <h1 class="mb-2">All Roles</h1>

        <form asp-action="Index" class="w-100 mx-auto my-3 row">


            <div class="col-md-9 w-100">
                <input name="SearchValue" type="text" placeholder="Role Name ..." class="rounded px-2 w-100" />
            </div>
            <div class="col-md-3 w-100">
                <button type="submit" class="btn btn-primary py-1 px-2"><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>


        </form>

        <table class="table table-striped table-hover text-center">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(R => R.Id)</td>
                    <td>@Html.DisplayNameFor(R => R.RoleName)</td>
                    
                    <td>Details</td>
                    <td>Edit</td>
                    <td>Delete</td>

                </tr>
            </thead>
            <tbody>
                @foreach (var Role in Model)
                {
                    <tr>

                        <td>@Html.DisplayFor(R => Role.Id)</td>
                        <td>@Html.DisplayFor(R => Role.RoleName)</td>

                        <partial name="_ButtonsPartialView" model="@Role.Id" />
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-danger mt-2">There Is No Roles</div>
}

