@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "All Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() > 0)
{

    <div class="w-100 mx-auto mt-5 p-1">
        <h1 class="mb-2">All Users</h1>

        <form asp-action="Index" class="w-100 mx-auto my-3 row">


            <div class="col-md-9 w-100">
                <input name="SearchValue" type="text" placeholder="Search By Email ..." class="rounded px-2 w-100" />
            </div>
            <div class="col-md-3 w-100">
                <button type="submit" class="btn btn-primary py-1 px-2"><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>


        </form>

        <table class="table table-striped table-hover text-center">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(u => u.Id)</td>
                    <td>@Html.DisplayNameFor(u => u.FName)</td>
                    <td>@Html.DisplayNameFor(u => u.LName)</td>
                    <td>@Html.DisplayNameFor(u => u.Email)</td>
                    <td>@Html.DisplayNameFor(u => u.PhoneNumber)</td>
                    <td>@Html.DisplayNameFor(u => u.Roles)</td>
                    
                    <td>Details</td>
                    <td>Edit</td>
                    <td>Delete</td>

                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>

                        <td>@Html.DisplayFor(u => user.Id)</td>
                        <td>@Html.DisplayFor(u => user.FName)</td>
                        <td>@Html.DisplayFor(u => user.LName)</td>
                        <td>@Html.DisplayFor(u => user.Email)</td>
                        <td>@Html.DisplayFor(u => user.PhoneNumber)</td>
                        <td>@string.Join(" ",user.Roles)</td>
                     
                       
                        <partial name="_ButtonsPartialView" model="@user.Id" />
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-danger mt-2">There Is No Users</div>
}

