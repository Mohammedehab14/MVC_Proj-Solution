@model DepartmentViewModel
<div class="w-75 mx-auto mb-2">
    <label for="code" class="mb-2" asp-for="Code"></label>
    <input disabled readonly asp-for="Code" id="code" placeholder="@Html.DisplayNameFor(D =>D.Code)" class="d-block w-100 rounded px-2">
</div>

<div class="w-75 mx-auto mb-2">
    <label for="name" class="mb-2" asp-for="Name"></label>
    <input disabled readonly asp-for="Name" id="name" placeholder="@Html.DisplayNameFor(D =>D.Name)" class="d-block w-100 rounded px-2">
</div>

<div class="w-75 mx-auto mb-2">
    <label for="date" class="mb-2" asp-for="DateOfCreation"></label>
    <input disabled readonly asp-for="DateOfCreation" id="date" placeholder="@Html.DisplayNameFor(D =>D.DateOfCreation)" class="d-block w-100 rounded px-2">
</div>