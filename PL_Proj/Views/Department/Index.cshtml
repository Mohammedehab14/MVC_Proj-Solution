@model IEnumerable<DepartmentViewModel>
@{
    ViewBag.Title = "All Departments";
}
<a asp-action="Create" class="btn btn-dark">Create Department  <i class="fa-solid fa-arrow-right"></i></a>
@if (Model.Count() > 0)
{
    
    <div class="w-75 mx-auto shadow mt-5 p-3">
        <h1 class="mb-2">All Departments</h1>
        <table class="table table-striped table-hover text-center">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(D => D.Code)</td>
                    <td>@Html.DisplayNameFor(D => D.Name)</td>
                    <td>@Html.DisplayNameFor(D => D.DateOfCreation)</td>
                    <td>Details</td>
                    <td>Edit</td>
                    <td>Delete</td>

                </tr>
            </thead>
            <tbody>
                @foreach(var department in Model)
                {
                    <tr>
                        <td>@department.Code</td>
                        <td>@department.Name</td>
                        <td>@department.DateOfCreation</td>
                        <partial name="_ButtonsPartialView" model="@department.Id.ToString()"/>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}else
{
    <div class="alert alert-danger mt-2">There Is No Department</div>
}

