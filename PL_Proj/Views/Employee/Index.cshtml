@model IEnumerable<EmployeeViewModel>
@{
    ViewBag.Title = "All Employees";
}
<a asp-action="Create" class="btn btn-dark">Add New Employee  <i class="fa-solid fa-arrow-right"></i></a>
@if (Model.Count() > 0)
{

    <div class="w-100 mx-auto mt-5 p-1">
        <h1 class="mb-2">All Employees</h1>
        @*<div class="w-75 mx-auto my-3 row">
            <form asp-action="Index" class="row">
                <div class="col-md-9 w-75">
                    <input name="SearchValue" type="text" placeholder="Employee's Name" class="rounded px-2 w-100" />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </form>
        </div>*@
        <form asp-action="Index" class="w-100 mx-auto my-3 row">
            
                
                <div class="col-md-9 w-100">
                    <input name="SearchValue" type="text" placeholder="Employee's Name" class="rounded px-2 w-100" />
                </div>
                <div class="col-md-3 w-100">
                    <button type="submit" class="btn btn-primary py-1 px-2"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
                
            
        </form>

        <table class="table table-striped table-hover text-center">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(E => E.Image)</td>
                    <td>@Html.DisplayNameFor(E => E.Name)</td>
                    <td>@Html.DisplayNameFor(E => E.Age)</td>
                    <td>@Html.DisplayNameFor(E =>E.Address)</td>
                    <td>@Html.DisplayNameFor(E =>E.Email)</td>
                    <td>@Html.DisplayNameFor(E =>E.Salary)</td>
                    <td>@Html.DisplayNameFor(E =>E.Department)</td>
                    <td>@Html.DisplayNameFor(E =>E.PhoneNumber)</td>
                    <td>@Html.DisplayNameFor(E =>E.HireDate)</td>
                    <td>@Html.DisplayNameFor(E =>E.IsActive)</td>
                    <td>Details</td>
                    <td>Edit</td>
                    <td>Delete</td>

                </tr>
            </thead>
            <tbody>
                @foreach (var Emp in Model)
                {
                    <tr>
                        <td><img class="rounded" height="35" width="35" src="~/Files/Images/@Emp.ImageName" alt="Emp-Image" /></td>
                        <td>@Emp.Name</td>
                        <td>@Emp.Age</td>
                        <td>@Emp.Address</td>
                        <td>@Html.DisplayFor(E => Emp.Email)</td>
                        <td>@Html.DisplayFor(E => Emp.Salary)</td>
                        <td>@Html.DisplayFor(E => Emp.Department.Name)</td>

                        <td>@Emp.PhoneNumber</td>
                        <td>@Emp.HireDate</td>
                        <td>
                            @if(Emp.IsActive == true)
                            {
                                <i class="fa-solid fa-circle" style="color : green"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-circle" style="color : red"></i>

                            }
                        </td>
                        <partial name="_ButtonsPartialView" model="@Emp.Id.ToString()" />
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-danger mt-2">There Is No Employee</div>
}

