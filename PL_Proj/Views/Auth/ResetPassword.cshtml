@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="ResetPassword" method="post">
			@*<div asp-validation-summary="All"></div>*@
	
			<div class="mb-2 mx-auto w-75 omda">
				<input class="w-100  rounded px-2 d-block" asp-for="NewPassword" placeholder="New Password">
				<span asp-validation-for="NewPassword" class="text-danger"></span>
			</div>

			<div class="mb-2 mx-auto w-75 omda">
				<input class="w-100  rounded px-2 d-blockw-100  rounded px-2 d-block" asp-for="ConfirmPassword" placeholder="Confirm Password">
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>

			<input type="submit" value="Reset Password">
		</form>
	</div>
</div>

@section ValidationScriptSection
	{
	<partial name="_ValidationScriptsPartial" />
}


