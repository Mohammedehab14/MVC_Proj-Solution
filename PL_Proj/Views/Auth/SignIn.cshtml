@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn">
			
			<div class="mb-2 mx-auto w-75 omda">
				<input class="w-100  rounded px-2 d-block" asp-for="Email" placeholder="Email">
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="mb-2 mx-auto w-75 omda">
				<input class="w-100  rounded px-2 d-block" asp-for="Password" placeholder="Password">
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			
			<div asp-validation-summary="All"></div>
			
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox">
					<span>Remember Me ?</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
		<p> <a asp-action="ForgetPassword">Forget Password?</a></p>
	</div>
</div>

@section ValidationScriptSection
	{
	<partial name="_ValidationScriptsPartial" />
}

